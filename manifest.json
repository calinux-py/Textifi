{
  "manifest_version": 3,
  "name": "Textifi",
  "version": "1.0",
  "description": "Convert audio to text using OpenAI Whisper",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
